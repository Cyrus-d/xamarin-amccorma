<?xml version="1.0" encoding="utf-8"?>
  <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	  <item android:id="@+id/shadowLayer"> 
		    <shape android:shape="rectangle">
		    	<!-- border color -->
		    	<stroke
		        	android:width="5dip"
		        	android:color="#e60000" />
			    <padding
			        android:bottom="0dip"
			        android:left="0dip"
			        android:right="0dip"
			        android:top="0dip" />

			   	<corners android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/> 
		    </shape>
	  </item>  
	   <item android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp" android:id="@+id/BorderLayer">  
	     	<shape android:shape="rectangle"> 
	     		<!-- background color -->
	      		<corners android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/> 
	    	</shape>
	   </item>  
	    <item android:bottom="10dp"  android:top="10dp" android:left="5dp" android:right="5dp" android:id="@+id/MainLayer">  
	     	<shape android:shape="rectangle"> 
	     		<!-- background color -->
	      		<solid android:color="#FFFFFF" />
	      		<corners android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/> 
	    	</shape>
	   </item>    
 </layer-list>